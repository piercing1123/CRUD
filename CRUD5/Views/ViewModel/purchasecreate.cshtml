@model CRUD5.Models.AllViewModel

@{
    ViewBag.Title = "新增進貨";
}

<h2>新增進貨</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.purchase.PName, "產品名稱", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.purchase.PName, new { @Value = ViewBag.product_Name, @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.purchase.PName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.purchase.PQuantity, "單位", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.purchase.PQuantity, new { @Value = ViewBag.product_Quantity, @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.purchase.PQuantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.purchase.PPurchaseprice, "進價", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.purchase.PPurchaseprice, new { @Value = ViewBag.product_Purchaseprice, @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.purchase.PPurchaseprice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.purchase.PAdd, "進貨量", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.purchase.PAdd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.purchase.PAdd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.purchase.EName, "廠商名稱", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.purchase.EName, (IEnumerable<SelectListItem>)ViewBag.employeeName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.purchase.EName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.purchase.EPhone, "廠商電話", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.purchase.EPhone, (IEnumerable<SelectListItem>)ViewBag.employeePhone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.purchase.EPhone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.purchase.EAddress, "廠商地址", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.purchase.EAddress, (IEnumerable<SelectListItem>)ViewBag.employeeAddress, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.purchase.EAddress, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (ViewBag.product_Name != "無此產品")
                {
                    <input type="submit" value="新增" class="btn btn-default" />
                }
            </div>
        </div>
    }
    <div>
            @Html.ActionLink("返回", "purchase")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
